{
  "name": "VEXâ€‘PROS Dev Container",

  // build context (unchanged)
  "build": { "dockerfile": "Dockerfile" },

  // run once after the container starts
  "postCreateCommand": [
  // ðŸ‘‰Â If we're in Codespaces *and* no real vexcom is present,
  //    create a 1â€‘line stub on /usr/local/bin so the extension is happy.
  "bash -c 'if [ \"$CODESPACES\" = \"true\" ] && ! command -v vexcom >/dev/null; then printf \"#!/usr/bin/env bash\\necho \\\"vexcom 0.0.0 (stub for Codespaces)\\\"\\n\" > /usr/local/bin/vexcom && chmod +x /usr/local/bin/vexcom; fi'",

    // 2Â â–ª sanityâ€‘check that PROS CLI is installed
    "pros --version"
  ],


  "customizations": {
    "vscode": {
      // âœ” VSÂ Code extensions that will autoâ€‘install in the container
      "extensions": [
        "sigbots.pros",
        "ms-vscode.cpptools-extension-pack"
      ],

      // âœ” VSÂ Code user/workspace settings
      "settings": {
        // Tell the MS C/C++ extension to use PROS' configuration provider
        "C_Cpp.default.configurationProvider": "sigbots.pros"
      }
    }
  }
}
